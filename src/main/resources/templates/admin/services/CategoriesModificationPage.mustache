<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MyCityTaxi | Добавить работника</title>
    <link rel='stylesheet' href='/css/bootstrap.min.css' type='text/css' media='all'>
    <link rel="stylesheet" href="/css/admincss.css" type='text/css'>

    <script>

        var fileReader=new FileReader();

        fileReader.onload=function (event)
        {
            var dataUri = event.target.result;

            var foto=document.getElementById("foto");

            foto.src=dataUri;

        }

        function fotoLoader()
        {
            var fotoElement=document.getElementById("fl");
            var listOfFiles=fotoElement.files;

            if(listOfFiles.length!=0)
            {
                fileReader.readAsDataURL(listOfFiles[0]);
            }

        }

    </script>

</head>
<body onload="fotoLoader()">

<div>
    <nav class="navbar navbar-expand-lg navbar-light" style="height: 80px;background-color: #007bff">
        <a class="navbar-brand" href="/adminportal">MyCityTaxi Admin</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/adminportal/statistics">Статистика</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminportal/personnel">Управление персоналом</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminportal/transport">Управление транспортом</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminportal/categories">Управление услугами</a>
                </li>
                <li class="nav-item" style="margin-left: 450px">
                    <a class="nav-link" href="/adminportal/signout">{{employeeName}}</a>
                </li>

            </ul>
        </div>
    </nav>
</div>

<h1 style="margin-left: 50px;margin-top: 20px;margin-bottom: 20px">Изменение информации о категории</h1>

{{#category}}
<form class="form-signin" method="POST" enctype="multipart/form-data" action="/adminportal/categories/category/update" >

    <ul class="nav nav-tabs" style="margin-left: 50px;margin-bottom: 20px">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#description">Основная информация</a>
        </li>
    </ul>


    <div class="tab-content" style="margin-left: 50px;width: 700px; float: left;" >
        <div class="tab-pane fade show active" id="description" style="margin-left: 50px">
            <div class="wrap">
                <div class="bblock">
                    <label for="sn" >Название</label>
                    <input type='text' id='sn' class='form-control bblock' style="height: 40px" name='sn'  value="{{serviceCategoryName}}" required>
                </div>
            </div>


            <div class="wrap" style="height: 150px">

                <div class="bblock" style="width: 150px">
                    <label for="desc" >Описание</label>
                    <textarea name="desc" id="desc" class='form-control bblock' style="width: 384px" maxlength="100" cols="35" rows="3" required>{{serviceCategoryDescription}}</textarea>
                </div>

            </div>




            <div style="margin-top: 30px">
                <button class="btn btn-lg btn-primary btn-block" style="width: 230px;height:80px;" name="serviceCategoryID" value="{{serviceCategoryID}}" type="submit" >Добавить</button>
            </div>



        </div>
    </div>


    <div style="margin-right: 400px;height: 370px;width: 200px;float: left;">
        <div style="margin-bottom: 20px">
            <div class="bblock" style="width: 150px">
                <label for="fl" >Фото</label>
                <input id="fl" name="fto" type="file" class='form-control bblock' onchange="fotoLoader()">
                <img alt="Foto" src="/img/{{serviceCategoryFoto}}" id="foto" style="width: 416px;height: 390px;margin-top: 20px">
            </div>

        </div>
    </div>

</form>
{{/category}}

