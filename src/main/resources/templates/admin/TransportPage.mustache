</div>


<h1 style="margin-left: 50px;margin-top: 20px;margin-bottom: 20px">Описание транспортного средства</h1>

{{#transport}}
    <div style="margin-left: 50px;width: 1000px; float: left;">
        <div class="wrap">
            <div class="bblock">
                <!--<label for="am" >Марка автомобиля</label>
                <input type='text' id='am' class='form-control bblock' style="height: 40px" name='cmark' value="carBrand" required>
-->
                <label>Марка автомобиля</label>
                <div class='bblock' style="height: 40px;font-size: 30px">{{carBrand}}</div>
            </div>
            <div class="bblock">
                <!--<label for="ma" >Модель автомобиля</label>
                <input type='text' id='ma' class='form-control bblock' style="height: 40px" name='cmodel' required>-->
                <label>Модель автомобиля</label>
                <div class='bblock' style="height: 40px;font-size: 30px">{{carModel}}</div>
            </div>
            <div class="bblock">
                <!--<label for="ac" >Цвет</label>
                <input type='text' id='ac' class='form-control' style="height: 40px" name='ccolor' required>-->

                <label>Цвет</label>
                <div class='bblock' style="height: 40px;font-size: 30px">{{carColor}}</div>
            </div>

        </div>
        <div class="wrap">

            <div class="bblock" >
                <!--<label for="cnm" >Регистрационный номер</label>
                <input type='text' id='cnm' class='form-control bblock' style="height: 40px;text-align: center" name='crnum' required>-->
                <label>Регистрационный номер</label>
                <div class='bblock' style="height: 40px;font-size: 30px">{{licensePlate}}</div>
            </div>
            <div class="bblock">
                <!--<label for="vin" >VIN</label>
                <input type='text' id='vin' class='form-control bblock' style="height: 40px;" name='cvin' required>-->
                <label>VIN</label>
                <div class='bblock' style="height: 40px;font-size: 30px">{{vin}}</div>
            </div>
            <div class="bblock">
                <!--<label for="yom" >Год производства</label>
                <input type='date' id='yom' class='form-control bblock' style="height: 40px;width: 150px" name='cyom' required>-->
                <label>Год производства</label>
                <div class='bblock' style="height: 40px;width: 150px;font-size: 30px">{{yearOfManufacture}}</div>
            </div>


        </div>
        <div class="wrap">
            <div class="bblock">
                <!--<label for="cn" >Номер кузова</label>
                <input type='text' id='cn' class='form-control bblock' style="height: 40px;" name='ccn' required>-->
                <label>Номер кузова</label>
                <div class='bblock' style="height: 40px;font-size: 30px">{{carcassNum}}</div>

            </div>
            <div class="bblock">
                <!--<label for="en" >Номер двигателя</label>
                <input type='text' id='en' class='form-control bblock' style="height: 40px;" name='cen' required>-->
                <label>Номер двигателя</label>
                <div class='bblock' style="height: 40px;font-size: 30px">{{engineNum}}</div>

            </div>

        </div>

        <!--<div class="wrap">

            <div class="bblock" style="width: 150px">
                <label for="cn" >Номер кузова</label>
                <input type='text' id='cn' class='form-control bblock' style="height: 40px;width: 150px" name='lname' required>

            </div>
            <div class="bblock">
                <label for="en" >Номер двигателя</label>
                <input type='text' id='en' class='form-control bblock' style="height: 40px;width: 320px" name='lname' required>

            </div>

        </div>-->

    </div>

    <div style="margin-left: 150px;height: 370px;width: 200px;float: left;">
            <div style="margin-bottom: 20px">
                <a href="/adminportal/transport/modifytransport?transportID={{transportID}}">
                <button class="btn btn-lg btn-primary btn-block" style="width: 230px;height:80px;">Изменить запись</button>
                </a>

            </div>
            <div>
                <a href="/adminportal/transport/deletetransport?transportID={{transportID}}">
                <button class="btn btn-lg btn-primary btn-block" style="width: 230px;height:80px;">Удалить запись</button>
                </a>
            </div>
    </div>

{{/transport}}
